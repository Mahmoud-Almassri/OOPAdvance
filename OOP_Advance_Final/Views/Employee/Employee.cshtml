@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee</title>
    <link href="~/StyleSheet1.css" rel="stylesheet" />
</head>
<body>
    <form action="Save" method="post">
        <div>
            <div class="Box">
                <div><h2 class="Header">Social Secuity Institution </h2></div>

                <div>
                    <label id="lblFName">First Name</label>
                    <input type="text" name="txtFName" />
                </div>
                <div>
                    <label id="lblLName">Last Name</label>
                    <input type="text" name="txtLName" />
                </div>
                <div>

                    <span>
                        You Are:
                        <select name="ddlJob">
                            <option value="1">Teacher</option>
                            <option value="2">Engineer</option>
                            <option value="3">Doctor</option>
                        </select>
                    </span>
                    <span>
                        Gender
                        <input type="radio" name="Gender" value="1" />Male
                        <input type="radio" name="Gender" value="2" />Femail
                    </span>
                </div>
                <div>
                    <label id="lblSalary">Your Salary:</label>
                    <input type="text" name="txtSalary" />

                </div>
                <div>
                    <label id="lblDiducation">Do you have any diducation:</label>
                    <input type="text" name="txtDiducation" />
                </div>

                <div>
                    <label id="lblDiducation">Do you have any Insintive:</label>
                    <input type="text" name="txtInsintive" />
                </div>
                <div>
                    <input type="submit" name="btnSave" value="Submit" />
                    <label style="color:green">@ViewBag.Success</label>
                    <label>@ViewBag.Faild</label>
                    <label>@ViewBag.Error</label>
                </div>
            </div>
        </div>
    </form>

</body>
</html>
